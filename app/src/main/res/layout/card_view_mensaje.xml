<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_mensaje_view"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/transparente"
    app:cardElevation="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_hora_card"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_fechaMensaje_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_MensajeLeido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/layout_mensaje_card"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_mensaje_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtMensajeLeido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>