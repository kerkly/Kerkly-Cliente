<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mensajes"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_margin="10dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_mensajes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/img_mensaes_express"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/imagen_lista_vacia" />

    <TextView
        android:id="@+id/txt_mensajes_express"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/lista_vacia_ordenesPendientes"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:lines="2"
        android:textSize="20sp"/>
</LinearLayout>